@using DRCDesignerWebApplication.ViewModels
@model DRCDesignerWebApplication.ViewModels.DrcCardViewModel;


<style>


    #addSubdomainAlert {
        margin-top: 280px;
        margin-left: 370px;
    }

    .CloseButton {
        float: right;
        margin-top: -50px;
    }

    .submitButton {
        display: flex;
        justify-content: flex-end;
    }
</style>



    @using (Html.BeginForm("Post", "DrcCards", FormMethod.Post, new { id = "addCard" }))
    {
        @Html.HiddenFor(m => m.SubdomainId)
        @(Html.DevExtreme().Form<DrcCardViewModel>())
       
    }

<script>
    function shadowCardPopUp() {
        var popup = $("#AddShadowCard-popup").dxPopup("instance");
        popup.option("contentTemplate", $("#Add-ShadowPopup-template"));
        popup.show();
    }
    function AddClickHandler(e) {
        $("#addCard").submit();
    }

</script>