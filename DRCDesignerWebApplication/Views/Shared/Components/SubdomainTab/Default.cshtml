
@model DRCDesignerWebApplication.Controllers.ViewModels.SubdomainListViewModel
<style>

    .active {
        background-color: rgba(133, 125, 125, 1) !important;
        color: rgba(28, 168, 221, 1) !important;
        
    }
    
    .nav {
        margin-left: 10px;
        background-color: lightgray;
        margin-bottom: 10px;
    }
  a {
      
      font-family:-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,"Noto Sans",sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
      font-size:1rem;
      font-weight:400;
      color:#212529;
      text-align:left;
  }
   
</style>

<ul class="nav nav-tabs">
    @foreach (var subdomain in Model.Subdomains)
    {
        var css = "nav-link";
        if (subdomain.ID == Model.CurrentSubdomain)
        {
            css += " active";
        }
        <li class="nav-item">
            <a href="/DrcCards/index?id=@subdomain.ID" class="@css">@subdomain.SubdomainName</a>
        </li>
     
    }

</ul>
